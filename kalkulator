cout << "Ââåäèòå ïåðâîå ÷èñëî" << endl; 
cin >> perv; 
cout << "Ââåäèòå âòîðîå ÷èñëî" << endl; 
cin >> vtor; 
cout << "Ââåäèòå îïåðàöèþ " << endl <<
"1. Ñëîæåíèå" << endl <<
"2. Âû÷èòàíèå" << endl <<
"3. Äåëåíèå" << endl <<
"4. Óìíîæåíèå" << endl;

cin >> znak; 

switch (znak) 
{ 
case 1: 
sum(perv, vtor, konech); 
break; 
case 2: 
raz(perv, vtor, konech); 
break; 
case 3: 
del(perv, vtor, konech); 
break; 
case 4: 
umno(perv, vtor, konech); 
break; 
}
return 0;
}
